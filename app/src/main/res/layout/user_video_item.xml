<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
      <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/geren_back"
            android:scaleType="centerCrop"
            android:id="@+id/imageView3" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
          >
            <ImageView
                android:id="@+id/iv_geren_zuojiantou"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/success_jt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_name"
                android:text="个人信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/groom"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView3"
            android:background="#fff"
            android:id="@+id/relativeLayout5">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="155115"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="粉丝   |   "/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注"/>
                    </LinearLayout>
                <TextView
                    android:id="@+id/iv_guanzhu"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="+关注"
                    android:textColor="#26C6DA"
                    android:gravity="center"
                    android:background="@drawable/back_guanzhu"
                    android:visibility="visible"/>
                <Button
                    android:id="@+id/iv_yiguanzhu"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                   android:text="已关注"
                    android:background="#26C6DA"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:visibility="gone"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:background="@drawable/back_dianzan1"
                android:gravity="center">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/dianzan"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"/>
            </LinearLayout>
        </RelativeLayout>
        <com.meg7.widget.CustomShapeImageView
            android:id="@+id/csi_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout5"
        android:background="#ccc"
        >
    </RelativeLayout>
</RelativeLayout>