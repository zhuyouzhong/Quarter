<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shuibowen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp">
        <com.meg7.widget.CustomShapeImageView
            android:id="@+id/forge_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="60dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/forge_item_nickname"
                android:text="cdsvfbd"
                android:layout_width="100dp"
                android:textColor="@color/frogetextcolor"
                android:layout_height="wrap_content"
               />
            <TextView
                android:id="@+id/forge_item_createtime"
                android:text="cdsvfbd"
                android:layout_width="100dp"
                android:textSize="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_jian"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/icon_packup"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_jia"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_open"
            android:visibility="visible"/>


        <LinearLayout
            android:id="@+id/ll_yi"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:gravity="center">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/xin"
           />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111"
            android:textSize="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_er"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/fen"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textSize="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_san"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_marginTop="12dp"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/xiao"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="111"
                android:textSize="8dp"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/forge_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dsfdgfdbgf"
        android:padding="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/iv_rlv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/back"
        android:layout_marginTop="5dp">

    </View>
</LinearLayout>