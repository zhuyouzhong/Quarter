<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quarter.RegsionActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginbackgroud"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_reg_lefts"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/arrow_left"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/tv_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号?"
            android:layout_alignParentRight="true"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@drawable/back_reg">
            <EditText
                android:id="@+id/et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:textColorHint="#ccc"
                android:layout_marginLeft="5dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_margin="5dp"
            ></View>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入密码"
                android:textColorHint="#ccc"
                android:layout_marginLeft="5dp"
                android:password="true"
                android:textColor="@color/groom"
                />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_regsion"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:text="注册"
        android:textColor="#ffff"
        android:gravity="center"
        android:layout_marginTop="260dp"
        android:background="@drawable/button_login"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/tou"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"/>
</RelativeLayout>
